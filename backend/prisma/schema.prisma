generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortLink {
  id        BigInt  @id @default(autoincrement()) @db.BigInt
  url       String  @db.VarChar(1500)
  alias     String  @unique
  published Boolean @default(true)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User        @relation(fields: [userId], references: [id])
  userId    BigInt      @map("user_id") @db.BigInt
  UrlClicks UrlClicks[]

  @@index([alias])
  @@map("short_links")
}

model User {
  id       BigInt  @id @default(autoincrement()) @db.BigInt
  email    String  @unique
  username String?
  provider String
  image    String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  ShortLink ShortLink[]

  @@map("users")
}

model UrlClicks {
  id          BigInt    @id @default(autoincrement()) @db.BigInt
  countryName String    @map("country_name")
  countryCode String    @map("country_code")
  regionName  String    @map("region_name")
  regionCode  String    @map("region_code")
  city        String
  device      String?
  os          String?
  browser     String?
  shortLinnk  ShortLink @relation(fields: [shortLinkId], references: [id])
  shortLinkId BigInt    @map("short_link_id") @db.BigInt

  createdAt DateTime @default(now()) @map("created_at")

  @@map("url_clicks")
}
